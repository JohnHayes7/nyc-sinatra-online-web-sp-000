<h1>Edit <%= @figure.name %> </h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch"/>
  <label>Name: </label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>"/><br>
  <label>Titles: </label>
  <em>Choose an Existing title</em>
  <% @titles.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.id %>" id="title_<%= t.id %>" <%='checked' if @figure.titles.include?(t) %>>
    <%= t.name %>

</form>
